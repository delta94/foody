{
  "name": "foody",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --watch",
    "start": "NODE_ENV=production concurrently \"yarn api:start\" \"yarn web:start\"",
    "api:dev": "yarn workspace @foody/api develop",
    "api:start": "yarn workspace @foody/api start",
    "api:build": "yarn workspace @foody/api build",
    "postinstall": "yarn build:ui",
    "build:ui": "yarn workspace @foody/ui build",
    "start:web": "concurrently \"yarn workspace @foody/web start\" \"yarn workspace @foody/ui start\" \"yarn workspace @foody/graphql start\" \"yarn workspace @foody/core start\"",
    "build:web": "yarn workspace @foody/web build",
    "start:admin": "concurrently \"yarn workspace @foody/admin start\" \"yarn workspace @foody/ui start\"",
    "build:admin": "yarn workspace @foody/admin build",
    "start:storybook": "concurrently \"yarn workspace @foody/storybook start\" \"yarn workspace @foody/ui start\"",
    "build:storybook": "yarn workspace @foody/storybook build",
    "start:cypress": "yarn workspace @foody/cypress start"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "roots": [
      "<rootDir>/packages"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react"
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn build:ui",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "stylelint --fix",
      "prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "12.6.8",
    "@types/react-native": "^0.61.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "concurrently": "^5.0.2",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.7.5"
  }
}
